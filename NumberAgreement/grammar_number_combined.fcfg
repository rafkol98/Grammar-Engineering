ARG[CAT=s] -> S
ARG[CAT=np] -> NP[NUM=?n]
ARG[CAT=pp] -> PP

PP -> Prep NP[NUM=?n]

# Terminals
ProperNoun[NUM=sg] -> 'Guinevere' | 'Arthur'
ProperNoun[NUM=pl] ->  'Mondays'
V[TENSE=pres, NUM=sg, SUBCAT=[HEAD=s, TAIL=nil]] -> 'thinks'
V[TENSE=pres, NUM=sg, SUBCAT=nil] -> 'sigh' | 'sighs' | 'rides' | 'ride'
V[TENSE=pres, NUM=sg, SUBCAT=[HEAD=np, TAIL=nil]] -> 'loves' | 'rides' | 'drinks'
V[TENSE=pres, NUM=sg, SUBCAT=[HEAD=pp, TAIL=nil]] -> 'drinks'
Noun[NUM=pl]  -> 'horses'
Noun[NUM=sg] -> 'water' | 'horse' | 'castle' | 'beer' | 'chalice'
V[TENSE=pres, NUM=pl, SUBCAT=[HEAD=np, TAIL=nil]] -> 'drink'
V[TENSE=pres, NUM=sg, SUBCAT=[HEAD=np, TAIL=nil]] -> 'drink'
Conj -> 'and'
Det -> 'the'
Prep -> 'near' | 'on' | 'from'
Adj -> 'old' | 'white'
Wh-adv -> 'when'
AUX -> 'do'| 'does'